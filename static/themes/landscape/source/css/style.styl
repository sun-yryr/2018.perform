.shop {
  background-color: #272822;
  color: #fbf9e2;
  box-sizing: inherit;
  width: 32%;
  padding: 10px;
  display: inline-block;
}

.shop img {
  box-sizing: inherit;
  width: 100%;
}

.shop table {
  box-sizing: inherit;
  width: 100%;

  background-color: #272822;
  color: #fbf9e2;
}
.slide-show {
  position: relative;
}

.slide-show p {
  font-size: 36px;
  text-align: center;
  position: absolute;
  color: white;
  top: 50%;
  left: 50%;
  -ms-transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  margin:0;
  padding:0;
}
.slide-show img {
  width: 100%;
  }

table{
    width: 100%;
    background-color: #ffffff;
    height auto;
    margin: 15px auto 10px auto;
}

td {
    border: solid 0.5px;  /* 枠線指定 */
    padding: 10px;      /* 余白指定 */
}

.odd td {
    background: #ccc;
}

.post {
    position: relative;
    border-bottom: 2px solid #d0d5d8;
    padding: 5px;
    
}

.post:first-child {
    padding-top: 0;
}

.post .title {
    font-size: 14px;
    color: #e99130;
    text-transform: uppercase;
    font-weight: 700;
    margin-bottom: 10px;
    display: inline-block;
}

.post .content h6 {
    color: #fbf9e2;
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 10px;
    font-weight: 700;
}

.post .content h6:focus {
    color: #e99130;
}

.post .date {
    color: #fbf9e2;
    margin-bottom: 0;
    line-height: 1;
}

.icon img{
    max-width: 18px;
}

.news {
    background-color: #272822;
    position: relative;
    width: 100%;
    min-height: 1px;
    padding-right: 10px;
    padding-left: 10px;
}

.news h1{
  text-align: center;
  color: #fbf9e2;
  font-size: 28px;
  }

.about { 
  padding: 20px 20px 20px 80px;
  color:  #fbf9e2;
  background-color: #272822;
  }

.about h1 {
  text-align: center;
  color: #fbf9e2;
  font-size: 28px;
  }

@media screen and (max-width: 1024px) {
  .shop {
  width: 49.5%;
  }
}

@media screen and (max-width: 500px) {
  .shop {
  box-sizing: inherit;
  width: 100%;
  padding: 10px;
  display: inline-block;
  }
}

@media screen and (min-width: 500px) {
  .header_title {
    display: none; 
    }

  .post {
    width 49.5%;
    display: inline-block;
  }
}

