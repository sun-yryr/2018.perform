.shop {
  box-sizing: inherit;
  width: 49.5%;
  padding: 10px;
  display: inline-block;
}

.shop img {
  box-sizing: inherit;
  width: 100%;
}

.shop table {
  box-sizing: inherit;
  width: 100%;
}
.slide-show {
  position: relative;
}

.slide-show p {
  position: absolute;
  color: white;
  top: 50%;
  left: 50%;
  -ms-transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  margin:0;
  padding:0;
}
.slide-show img {
  width: 100%;
  }

table{
    width: 100%;
    background-color: #ffffff;
    height auto;
    margin: 15px auto 10px auto;
}

td {
    border: solid 0.5px;  /* 枠線指定 */
    padding: 10px;      /* 余白指定 */
}

.odd td {
    background: #ccc;
}

.post {
    position: relative;
    border-right: 2px solid #d0d5d8;
    border-bottom: 2px solid #d0d5d8;
    padding: 5px 0;
    
}

.post:first-child {
    padding-top: 0;
}

.post .title {
    font-size: 14px;
    color: #ee002d;
    text-transform: uppercase;
    font-weight: 700;
    margin-bottom: 10px;
    display: inline-block;
}

.post .content h6 {
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 10px;
    font-weight: 700;
}

.post .content h6:focus {
    color: #ee002d;
}

.post .date {
    margin-bottom: 0;
    line-height: 1;
}

.post img{
    max-width: 18px;
}

.news {
    background-color: #ffffff;
    position: relative;
    width: 100%;
    min-height: 1px;
    padding-right: 10px;
    padding-left: 10px;
}

.news h1{
  font-size: 28px;
  }

@media screen and (max-width: 500px) {
  .shop {
  box-sizing: inherit;
  width: 100%;
  padding: 10px;
  display: inline-block;
  }
}

@media screen and (min-width: 500px) {
  .header_title {
    display: none; 
    }

  .post {
    width 49.5%;
    display: inline-block;
  }

}

